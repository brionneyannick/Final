<div class="well well-sm" id="<%= @company.id %>">
  <strong><%= @company.name %></strong>
  <br>
  <div class="text-right">
    <!-- Button trigger modal -->
    <%= link_to 'Show', company_path(@company), class: 'btn btn-xs btn-warning' %>
    <%= link_to 'Editar', edit_company_path(@company), data: { remote: true }, class: 'btn btn-xs btn-success' %>
    <%= link_to 'Eliminar', company_path(@company), method: :delete, data: { confirm: 'Estás seguro que deseas eliminar esta Compañía?', remote: true }, class: 'btn btn-xs btn-danger' %>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Compañia</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="comapany_edit">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
